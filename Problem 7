#include <iostream>

using namespace std;

int main()
{
int x, sum;

while (x > 0)
    {
        cout << "Enter an integer: "; 
            cin >> x;
    if (x > 0)
            {
             sum = (x * (x + 1)) / 2;
             cout << "The sum of 1 to " << x << " is: " << sum << endl;
            continue;
            }
            else 
            {
            cout << "Thank You!" << endl;
            }
    }
    return 0;
}
